{
  "name": "Eggcellent Search",
  "shortName": "Eggcellent",
  "manifest_version": 3,
  "version": "0.3.1",
  "background": {
    "service_worker": "data/background/service_worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "tabGroups",
    "bookmarks",
    "history",
    "management"
  ],
  "icons": {
    "512": "data/assets/icons/512x512.png"
  },
  "action": {
    "default_title": "Open Quick Menu",
    "default_popup": "data/pages/popup/index.html"
  },
  "description": "A free search bar to manage your browser. Eggspand your productivity and eggsplore new possibilities.",
  "offline_enabled": true,
  "options_page": "data/pages/options/index.html",
  "commands": {
    "open_search_page": {
      "suggested_key": "Alt+S",
      "description": "Open the Search page"
    }
  }
}